% 定义文件路径
\def\usefolder#1{
    \def\beamer@themelocation{#1}
}

\def\beamer@calltheme#1#2#3{%
    \def\beamer@themelist{#2}
        \@for\beamer@themename:=\beamer@themelist\do
    {\usepackage[{#1}]{\beamer@themelocation/#3\beamer@themename}}
}
  
\mode<all>