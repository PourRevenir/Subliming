\mode<presentation>

% Requirement
\RequirePackage{tikz}
\usetikzlibrary{shapes.geometric,calc,shadows}
\RequirePackage{pgf}
\RequirePackage{graphicx}
\RequirePackage{fontspec}
\RequirePackage{tcolorbox}
\tcbuselibrary{skins}
\RequirePackage{enumitem}

% Options
\DeclareOptionBeamer{style}{
    \PassOptionsToPackage{style=#1}{styles/beamercolorthemeSUBLIMING}
}
\ExecuteOptionsBeamer{style=csu-blue}
\ProcessOptionsBeamer

% Settings
\useinnertheme{SUBLIMING}
\useoutertheme{SUBLIMING}
\usecolortheme{SUBLIMING}
\usefonttheme{SUBLIMING}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[shadow=false]

\mode<all>