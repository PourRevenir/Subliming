% Enumerate item color 
\setlist[enumerate]{label={\ifnum\@itemdepth=1\relax
  \color{alerted text}\else
  \color{primary}\fi\theenumi.}}

% Itemize item color (bullet)
\setlist[itemize]{label=\color{primary}$\bullet$}
%\setlist[itemize]{label=\color{primary}\textbullet}

% Change alerted text color to alerted (default is nudarkorange)
\setbeamercolor{alerted text}{fg=alerted}

% Turn off shading for block title when rounded=true (by default, rounded = false)
\makeatletter
\pgfdeclareverticalshading[lower.bg,upper.bg]{bmb@transition}{200cm}{%
  color(0pt)=(lower.bg); color(4pt)=(lower.bg); color(4pt)=(upper.bg)}

% Change block title background to primary and body bg to primary10
\setbeamercolor{block title}{fg=white,bg=primary}
\setbeamercolor{block body}{parent=normal text,fg=black,bg=primary10!55}

% Change the alertblock title background to alerted text color
\setbeamercolor{block title alerted}{fg=white,bg=alerted}
\setbeamercolor{block body alerted}{fg=black,bg=alerted!10}

% Change the exampleblock title background to greens
\setbeamercolor{block title example}{fg=white,bg=example}
\setbeamercolor{block body example}{fg=black,bg=example!10}

% Change cption text color to primary
\setbeamercolor{caption name}{fg=primary}

% Change color of toc text to primary
\setbeamercolor{section in toc}{fg=primary}

% Ensure continuation text is white (for allowframebreaks)
\setbeamercolor{frametitle continuation}{fg=primary}

% Set framtitle color to primary
\setbeamercolor{frametitle}{fg=primary}

\mode<all>