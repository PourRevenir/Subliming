\mode<presentation>

% Create new font families from OTF & TTF fonts
\newfontfamily\Campton[
    Path=fonts/Campton/,
    UprightFont = * Light,
    ItalicFont = * Light Italic,
    BoldFont = * Medium,
    BoldItalicFont = * Medium Italic,
    Extension=.otf
]{Campton}

% Change title font
\setbeamerfont{title}{family=\Campton, series={\bfseries}, size=\LARGE}
\setbeamerfont{author}{family=\Campton, size=\small}
\setbeamerfont{frametitle}{family=\Campton, series={\bfseries}, size=\Large}
\setbeamerfont{section}{family=\Campton, size=\LARGE}

% set chinese font
\setCJKmainfont[
    Path = fonts/PingFang/,
    UprightFont = *-Light,
    ItalicFont = *-Thin,
    BoldFont = *-Medium,
    BoldItalicFont = *-semibold,
    Extension = .ttf
]{PingFangSC}

\setCJKsansfont[
    Path = fonts/PingFang/,
    UprightFont = *-Light,
    ItalicFont = *-Thin,
    BoldFont = *-Medium,
    BoldItalicFont = *-semibold,
    Extension = .ttf
]{PingFangSC}

\setCJKmonofont[
    Path = fonts/PingFang/,
    UprightFont = *-Light,
    ItalicFont = *-Thin,
    BoldFont = *-Medium,
    BoldItalicFont = *-semibold,
    Extension = .ttf
]{PingFangSC}

% Set sans font
\setsansfont[
    Path = fonts/Akkurat/,
    UprightFont = *Light-Regular,
    ItalicFont = *Light-Italic,
    BoldFont = *-Regular,
    BoldItalicFont = *-Bold,
    Extension = .otf
]{AkkuratPro}

% Set mono font
\setmonofont[
    Path = fonts/Consolas/,
    ItalicFont = *i,
    Extension =.ttf
]{consola}

\mode<all>